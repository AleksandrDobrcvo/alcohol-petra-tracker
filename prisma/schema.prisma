generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String            @id @default(uuid())
  discordId         String            @unique
  name              String
  role              String            @default("MEMBER")
  cardNumber        String?
  isBlocked         Boolean           @default(false)
  isApproved        Boolean           @default(false)
  moderatesAlco     Boolean           @default(false)
  moderatesPetra    Boolean           @default(false)
  isFrozen          Boolean           @default(false)
  frozenReason      String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  auditLogs         AuditLog[]        @relation("AuditActor")
  updatedEntries    Entry[]           @relation("EntryUpdater")
  createdEntries    Entry[]           @relation("EntryCreator")
  submittedEntries  Entry[]           @relation("EntrySubmitter")
  decidedRequests   EntryRequest[]    @relation("RequestDecider")
  submittedRequests EntryRequest[]    @relation("RequestSubmitter")
  publicViewTokens  PublicViewToken[] @relation("PublicTokenCreator")
}

model Entry {
  id            String        @id @default(uuid())
  date          DateTime
  submitterId   String
  type          String
  stars         Int
  quantity      Int
  amount        Float
  paymentStatus String        @default("UNPAID")
  paidAt        DateTime?
  createdById   String
  updatedById   String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  updatedBy     User?         @relation("EntryUpdater", fields: [updatedById], references: [id])
  createdBy     User          @relation("EntryCreator", fields: [createdById], references: [id])
  submitter     User          @relation("EntrySubmitter", fields: [submitterId], references: [id])
  entryRequest  EntryRequest?

  @@index([date])
  @@index([submitterId])
  @@index([paymentStatus])
  @@index([type])
}

model EntryRequest {
  id             String    @id @default(uuid())
  submitterId    String
  date           DateTime
  type           String
  stars          Int
  quantity       Int
  amount         Float
  nickname       String
  screenshotPath String
  status         String    @default("PENDING")
  decidedAt      DateTime?
  decisionNote   String?
  decidedById    String?
  relatedEntryId String?   @unique
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  cardLastDigits String?
  relatedEntry   Entry?    @relation(fields: [relatedEntryId], references: [id])
  decidedBy      User?     @relation("RequestDecider", fields: [decidedById], references: [id])
  submitter      User      @relation("RequestSubmitter", fields: [submitterId], references: [id])

  @@index([status])
  @@index([type])
  @@index([submitterId])
  @@index([decidedById])
}

model AuditLog {
  id          String   @id @default(uuid())
  actorUserId String
  action      String
  targetType  String
  targetId    String
  before      String?
  after       String?
  createdAt   DateTime @default(now())
  actor       User     @relation("AuditActor", fields: [actorUserId], references: [id])

  @@index([createdAt])
  @@index([actorUserId])
  @@index([action])
  @@index([targetType, targetId])
}

model PublicViewToken {
  id          String   @id @default(uuid())
  tokenHash   String   @unique
  isRevoked   Boolean  @default(false)
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   User     @relation("PublicTokenCreator", fields: [createdById], references: [id])

  @@index([isRevoked])
  @@index([createdAt])
}

model Pricing {
  id        String   @id @default(uuid())
  type      String
  stars     Int
  price     Float
  updatedAt DateTime @updatedAt

  @@unique([type, stars])
}
